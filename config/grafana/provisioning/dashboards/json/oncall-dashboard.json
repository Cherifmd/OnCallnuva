  "panels": [
    {
      "title": "Open Incidents",
      "type": "stat",
      "datasource": "Prometheus",
      "gridPos": { "h": 4, "w": 4, "x": 0, "y": 0 },
      "targets": [
        {
          "expr": "oncall_incidents_open",
          "legendFormat": "Open"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "thresholds": {
            "steps": [
              { "color": "green", "value": null },
              { "color": "yellow", "value": 5 },
              { "color": "red", "value": 10 }
            ]
          }
        }
      }
    },
    {
      "title": "Avg MTTA (seconds)",
      "type": "stat",
      "datasource": "Prometheus",
      "gridPos": { "h": 4, "w": 4, "x": 4, "y": 0 },
      "targets": [
        {
          "expr": "oncall_mtta_avg_seconds",
          "legendFormat": "MTTA"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "s",
          "thresholds": {
            "steps": [
              { "color": "green", "value": null },
              { "color": "yellow", "value": 120 },
              { "color": "red", "value": 300 }
            ]
          }
        }
      }
    },
    {
      "title": "Avg MTTR (seconds)",
      "type": "stat",
      "datasource": "Prometheus",
      "gridPos": { "h": 4, "w": 4, "x": 8, "y": 0 },
      "targets": [
        {
          "expr": "oncall_mttr_avg_seconds",
          "legendFormat": "MTTR"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "s",
          "thresholds": {
            "steps": [
              { "color": "green", "value": null },
              { "color": "yellow", "value": 600 },
              { "color": "red", "value": 1800 }
            ]
          }
        }
      }
    },
    {
      "title": "Total Alerts Ingested",
      "type": "stat",
      "datasource": "Prometheus",
      "gridPos": { "h": 4, "w": 4, "x": 12, "y": 0 },
      "targets": [
        {
          "expr": "oncall_alerts_total",
          "legendFormat": "Alerts"
        }
      ]
    },
    {
      "title": "Escalations",
      "type": "stat",
      "datasource": "Prometheus",
      "gridPos": { "h": 4, "w": 4, "x": 16, "y": 0 },
      "targets": [
        {
          "expr": "oncall_escalations_total",
          "legendFormat": "Escalations"
        }
      ]
    },
    {
      "title": "Incidents by Severity",
      "type": "piechart",
      "datasource": "Prometheus",
      "gridPos": { "h": 8, "w": 8, "x": 0, "y": 4 },
      "targets": [
        {
          "expr": "sum by (severity) (oncall_incidents_total)",
          "legendFormat": "{{severity}}"
        }
      ]
    },
    {
      "title": "Incidents by Status",
      "type": "piechart",
      "datasource": "Prometheus",
      "gridPos": { "h": 8, "w": 8, "x": 8, "y": 4 },
      "targets": [
        {
          "expr": "sum by (status) (oncall_incidents_total)",
          "legendFormat": "{{status}}"
        }
      ]
    },
    {
      "title": "Alert Ingestion Rate",
      "type": "timeseries",
      "datasource": "Prometheus",
      "gridPos": { "h": 8, "w": 8, "x": 16, "y": 4 },
      "targets": [
        {
          "expr": "rate(alerts_received_total[1m])",
          "legendFormat": "{{source}} / {{severity}}"
        }
      ]
    },
    {
      "title": "Incidents by Service",
      "type": "bargauge",
      "datasource": "Prometheus",
      "gridPos": { "h": 8, "w": 12, "x": 0, "y": 12 },
      "targets": [
        {
          "expr": "sum by (service) (oncall_incidents_by_service)",
          "legendFormat": "{{service}}"
        }
      ]
    },
    {
      "title": "Correlation Engine Latency",
      "type": "timeseries",
      "datasource": "Prometheus",
      "gridPos": { "h": 8, "w": 12, "x": 12, "y": 12 },
      "targets": [
        {
          "expr": "histogram_quantile(0.99, rate(correlation_engine_seconds_bucket[5m]))",
          "legendFormat": "p99"
        },
        {
          "expr": "histogram_quantile(0.95, rate(correlation_engine_seconds_bucket[5m]))",
          "legendFormat": "p95"
        },
        {
          "expr": "histogram_quantile(0.50, rate(correlation_engine_seconds_bucket[5m]))",
          "legendFormat": "p50"
        }
      ],
      "fieldConfig": {
        "defaults": { "unit": "s" }
      }
    }
  ],
  "refresh": "5s",
  "schemaVersion": 39,
  "tags": ["oncall", "incidents"],
  "templating": { "list": [] },
  "time": { "from": "now-1h", "to": "now" },
